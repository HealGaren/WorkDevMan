<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.applepi.workdevman">

    <!-- <uses-permission android:name="android.permission.DISABLE_KEYGUARD" /> -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service android:name=".LockScreen.LockService" />

        <receiver android:name=".LockScreen.ScreenReceiver" />
        <receiver android:name=".LockScreen.PackageReceiver" />
        <receiver android:name=".LockScreen.ConnReceiver" />
        <receiver android:name=".LockScreen.AlarmReceiver" />
        <receiver
            android:name=".LockScreen.BootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name=".Activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Tutorial1Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Tutorial2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.LoginActivity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.LoginActivity.LoginCallbackActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="workdevman" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.LoginActivity.LoginDoneActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.DialogActivity.LogoutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".Activity.DialogActivity.LoginWebActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".Activity.DialogActivity.SettingLockActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dialog.Translucent" />
        <activity
            android:name=".Activity.DialogActivity.SuccessActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dialog.Translucent" />
        <activity
            android:name=".Activity.DialogActivity.SelectLockDayActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".Activity.DialogActivity.DayPickerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".Activity.DialogActivity.TimePickerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".Activity.DialogActivity.SelectRepoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dialog"/>
    </application>

</manifest>
