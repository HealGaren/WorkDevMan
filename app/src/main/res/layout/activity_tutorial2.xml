<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/colorPrimary"
android:gravity="center"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:weightSum="10"
tools:context="kr.spyec.workdevman.Activity.Tutorial1Activity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:gravity="center"
    android:text="Push 여부를 이용하여\n게으르게 일할 때\n휴대폰을 잠금시키세요."
    android:textColor="#fff"
    android:textSize="25sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.5"
    android:gravity="center">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:background="#fff" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="5"
    android:padding="20dp"
    android:orientation="horizontal"
    android:weightSum="10"
    android:gravity="center">

    <ImageView
        android:layout_weight="4"
        android:src="@drawable/preview_lockscreen"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <ImageView
        android:layout_weight="4"
        android:src="@drawable/preview_setting_lock"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center">

    <ImageButton
        android:id="@+id/btn_tutorial_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/check" />
</LinearLayout>

</LinearLayout>
